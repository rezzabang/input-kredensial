generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Datapribadi {
  nip          String   @id
  nama         String
  tempatLahir  String
  tanggalLahir DateTime
  jenisKelamin String
  phone        String
  email        String
  alamat       String

  pekerjaan  DataPekerjaan?
  pendidikan DataPendidikan?
}

model DataPekerjaan {
  nip               String   @id
  namaTempatBekerja String
  alamatPekerjaan   String
  noStr             String
  tanggalStr        DateTime
  noSip             String
  tanggalSip        DateTime

  datapribadi Datapribadi @relation(fields: [nip], references: [nip], onDelete: Cascade)
}

model DataPendidikan {
  nip           String   @id
  universitas   String
  jurusan       String
  noIjazah      String
  tanggalIjazah DateTime
  fileIjazah    String?

  datapribadi Datapribadi @relation(fields: [nip], references: [nip], onDelete: Cascade)
}
